<%- @databases.each do |env, db| %>
<%= (env =~ /_default/ ? "production" : env) %>:

<%- if Gem::Version.new(db['ruby_version']) < Gem::Version.new("1.9.0") %>
  adapter: <%= db['adapter'] %>
<%- else %>
  <%- if db['adapter'] == 'mysql' %>
  adapter: mysql2
  <%- else %>
  adapter: <%= db['adapter'] %>
  <%- end %>
<%- end %>
  host: <%= @host %>
  database: <%= db['database'] %>
  username: <%= db['username'] %>
  password: <%= db['password'] %>
  encoding: <%= db.has_key?('encoding') ? db['encoding'] : 'utf8' %>
  reconnect: true
<%- end %>
